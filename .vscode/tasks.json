{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Kotlin",
      "type": "shell",
      "command": "kotlinc Main.kt -include-runtime -d Main.jar",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run Kotlin",
      "type": "shell",
      "command": "java -jar Main.jar",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "dependsOn": "Build Kotlin",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      }
    }
  ]
}
